<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">Library System</a>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/home">Home</a>
          </li>
          <% if (user && user.isAdmin) { %>
          <li class="nav-item">
            <a class="nav-link" href="/api/admin/books/manage">Manage Books</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/api/admin/requests"
              >View Admin Requests</a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/api/admin/checkout"
              >Checkout Requests</a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/api/admin/checkin"
              >Checkin Requests</a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
          <% } else if (user) { %>
          <li class="nav-item">
            <a class="nav-link" href="/api/user/books/view">Available Books</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/api/user/history">Borrowing History</a>
          </li>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        <div style="width: 40rem"></div>
        <li class="nav-item">
          <form action="/api/user/request-admin" method="POST">
            <button class="btn btn-outline-danger my-2 my-sm-0" type="submit">
              Request Admin Status
            </button>
          </form>
        </li>
          <% } %>
          
        </ul>
      </div>
    </nav>
    <div class="container mt-4"><%- include(view, { user: user }) %></div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="/scripts.js"></script>
  </body>
</html>
