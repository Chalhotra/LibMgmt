<h1 class="mb-4">Manage Admin Requests</h1>
<div class="card">
  <div class="card-header">
    <h3>Pending Requests</h3>
  </div>
  <div class="card-body">
    <% if (requests.length > 0) { %>
    <table class="table">
      <thead>
        <tr>
          <th>UserID</th>
          <th>Username</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% requests.forEach(request => { %>
        <tr>
          <td><%= request.id %></td>
          <td><%= request.username %></td>
          <td><%= request.admin_request_status %></td>
          <td>
            <form
              method="POST"
              action="/admin/requests/<%= request.id %>/approve"
              style="display: inline"
            >
              <button type="submit" class="btn btn-sm btn-success">
                Approve</button
              >x
            </form>
            <form
              method="POST"
              action="/admin/requests/<%= request.id %>/deny"
              style="display: inline"
            >
              <button type="submit" class="btn btn-sm btn-danger">Deny</button>
            </form>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <% } else { %>
    <p>No pending requests.</p>
    <% } %>
  </div>
</div>
